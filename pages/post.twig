{% extends 'layout.twig' %}

{% block body %}
<div class="row post">
  <div class="col-sm-9">
    <div class="row">
      <div class="col-sm-7">
        <h1 class="post__title">{{ post.title }}</h1>
      </div>
      <div class="col-sm-4 col-sm-offset-1">
        <h5 class="post__publication-date">{{ post.published_at | datetime }}</h5>
      </div>
    </div>
    <p class="post__content">{{ post.content }}</p>
  </div>

  <div class="col-sm-3 related-posts">
    {% include '_blog-sidebar.twig' %}
  </div>
</div>
{% endblock %}
