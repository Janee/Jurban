{% extends 'layout.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 text-center">
            <h3 class="section-title title">
                {{ category.title }}
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 products-filter">
            <h4 class="products-filter__title title">Categorias</h4>
            <hr>
            <div class="form-group products-filter__container">
                {% if categories | length > 0 %}
                    {% for categoryElement in categories %}
                        {% include '_category_tree_item.twig' with {
                            'category' : categoryElement,
                            'current'  : category
                        } only %}
                    {% endfor %}
                {% else %}
                    No hay subcategor√≠as
                {% endif %}
            </div>
        </div>

        <div class="col-sm-9">
            <div class="row">
                {% for product in products %}
                    <div class="col-xs-12 col-sm-6 col-lg-4">
                        {% include '_product.twig' %}
                    </div>
                    {{ loop.index % 2 == 0 ? '<div class="clearfix product-cards__clearfix-2"></div>': '' }}
                    {{ loop.index % 3 == 0 ? '<div class="clearfix product-cards__clearfix-3"></div>': '' }}
                {% endfor %}
            </div>
        </div>

        <div class="row text-center">
            {% include '_pagination.twig' %}
        </div>
    </div>
{% endblock body %}
