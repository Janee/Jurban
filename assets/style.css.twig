/* * * * * * * * * */
/* Product styles  */
/* * * * * * * * * */

.product-card {
    display: block;
    margin-bottom: 20px;
    line-height: 1.42857143;
    background-color: {{ settings.product_card_bg_color }};
    border: 1px solid {{ settings.border_color }};
    transition: border .2s ease-in-out;
    -webkit-transition: border .2s ease-in-out;
    -o-transition: border .2s ease-in-out;
    border-radius: 2px;
    padding: 0 4px 4px 4px;
}
.product-card__thumb-link {
    display: block;
    position: relative;
    border-bottom: 1px solid {{ settings.border_color }};
    width: 100%;
    height: 220px;
}
.product-card__thumb-image {
    display: block;
    position: absolute;
    margin: 0 -50px 0 0;
    top: 50%;
    left: 50%;
    max-height: 100%;
    transform: translate(-50%, -50%);
}
.product-card__details {
    display: block;
    padding: 9px;
    color: #333;
    text-decoration: none;
}
.product-card__details:hover {
    text-decoration: none;
}
.product-card__details__name,
.product-card__details__excerpt {
    font-weight: 300;
}
.product-card__details__price {
    font-weight: 300;
    text-align: right;
}
@media (max-width: 1199px) {
    .product-cards__clearfix-2 {
        display: inherit;
    }
    .product-cards__clearfix-3 {
        display: none;
    }
}
@media (min-width: 1200px) {
    .product-cards__clearfix-2 {
        display: none;
    }
    .product-cards__clearfix-3 {
        display: inherit;
    }
}

.products-filter__title {
    margin-top: 0;
    font-weight: 300;
}
.products-filter__container {
    margin-bottom: 8px;
}

.product__description {}
.product__description-name {
