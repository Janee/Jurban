    margin-top: 0;
    margin-bottom: 25px;
    font-weight: 400;
}
.header__top-link--uppercase {
    text-transform: uppercase;
}
.header__top-link:hover {
    color: {{ settings.header_links_hover_color }} !important;
}
.header__title {
    font-weight: 100;
}
.header__title a {
    color: {{ settings.header_color }};
    text-decoration: none;
}

.main-menu {
    background:{{ settings.menu_bg_color }};
    margin-bottom: 50px;
}
.main-menu > ul {
    padding: 20px 0 15px;
    border-bottom: 2px solid {{ settings.border_color }};
}
.main-menu > ul > li > a {
    color: {{ settings.nav_link_color }};
}
.main-menu > ul > li > a:hover {
