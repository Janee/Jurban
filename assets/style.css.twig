/* * * * * * * * * */
/* Element styles  */
/* * * * * * * * * */

body {
    color: {{ settings.body_font_color }};
    font-size: {{ settings.body_font_size }};
    background-color: {{ settings.shop_bg_color }};
    font-family: {{ settings.base_font }};
}
{% if settings.use_bg_image %}
    {% if 'tiled' in settings.bg_alignment %}
        body {
            background: url({{ settings['bg.jpg'] }}) 0 0 repeat;
        }
    {% elseif 'fill' in settings.bg_alignment %}
        body {
            background: url({{ settings['bg.jpg'] }}) 0 0 no-repeat fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            -webkit-backface-visibility: visible !important;
        }
    {% endif %}
    {% if 'contained' in settings.bg_alignment %}
        .body-container {
            background-color: {{ settings.shop_bg_color }};
            border-left: 15px solid {{ settings.shop_bg_color }};
            border-right: 15px solid {{ settings.shop_bg_color }};
        }
    {% endif %}
{% endif %}
hr {
    border-color: {{ settings.border_color }};
}
a,
a:visited {
    color: {{ settings.link_color }};
}
a:hover,
a:active {
    color: {{ settings.link_hover_color }};
}
button,
input[type='submit'] {
    background: {{ settings.link_color }};
    color: {{ settings.button_text_color }};
}
input[type='text'],
input[type='email'],
input[type='tel'],
input[type='url'],
input[type='date'],
input[type='time'],
input[type='month'],
input[type='datetime'],
input[type='datetime-local'],
input[type='color'],
input[type='range'],
input[type='number'],
input[type='search'] {
    border: 1px solid {{ settings.border_color }};
}

/* * * * * * * * */
/* Global styles */
/* * * * * * * * */

.btn {
    border-radius: 0;
    font-weight: 300;
    height: 45px;
    font-size: 16px;
    padding-top: 10px;
    letter-spacing: 1px;
    background: {{ settings.link_color }};
    color: {{ settings.button_text_color }};
}
.btn:hover {
    background: {{ settings.link_hover_color }};
    color: {{ settings.button_text_color }};
    opacity: .85;
}
.section-title {
    font-weight: 300;
    margin-bottom: 50px;
    text-transform: uppercase;
    text-align: center;
}
.section-title:after {
    background: #979797;
    height: 1px;
    width: 150px;
    left: 50%;
    margin-left: -75px;
    content: '';
    display: block;
    position: absolute;
    bottom: 35px;
}
.title,
a.title:link,
a.title:hover,
a.title:active,
a.title:visited {
    color: {{ settings.title_color }};
    font-size: {{ settings.title_font_size }};
}
.subtitle,
a.subtitle:link,
a.subtitle:hover,
a.subtitle:active,
a.subtitle:visited {
    color: {{ settings.subtitle_color }};
    font-size: {{ settings.subtitle_font_size }};
}
/* * * * * * * */
/* Form styles */
/* * * * * * * */

.form-control {
    -webkit-border-radius:0;
    -moz-border-radius:0;
    border-radius:0;
}
.checkbox-control {
    padding-left: 20px;
}
.checkbox-control__input {
    opacity: 0;
    z-index: 1;
}
.checkbox-control__label {
    margin-top: 0;
    font-weight: 300;
    display: inline-block;
    vertical-align: middle;
    position: relative;
    padding-left: 5px;
}
.checkbox-control__label::before {
    content: "";
    display: inline-block;
    position: absolute;
    width: 17px;
    height: 17px;
    left: 0;
    margin-left: -20px;
    border: 1px solid #cccccc;
    border-radius: 0;
    background-color: #fff;
    -webkit-transition: border 0.15s ease-in-out, color 0.15s ease-in-out;
    -o-transition: border 0.15s ease-in-out, color 0.15s ease-in-out;
    transition: border 0.15s ease-in-out, color 0.15s ease-in-out;
}
.checkbox-control__label::after {
    display: inline-block;
    position: absolute;
    width: 16px;
    height: 16px;
    left: 0;
    top: 0;
    margin-left: -20px;
    padding-left: 3px;
    padding-top: 1px;
    font-size: 11px;
    color: #555555;
}
input.checkbox-control__input[type="checkbox"]:focus + label::before {
    outline: thin dotted;
    outline: 5px auto -webkit-focus-ring-color;
    outline-offset: -2px;
}
input.checkbox-control__input[type="checkbox"]:checked + label::after {
    font-family: "MaterialDesignIcons";
    content: "\f1fe";
    color: white;
}
input.checkbox-control__input[type="checkbox"]:disabled + label {
    opacity: 0.65;
}
input.checkbox-control__input[type="checkbox"]:disabled + label::before {
    background-color: #eeeeee;
    cursor: not-allowed;
}
.checkbox-control__label--circle::before {
    border-radius: 50%;
}

/* * * * * * * * */
/* Layout styles */
/* * * * * * * * */

