<div class="main-menu">
  <div class="mobile">
    <div class="col-xs-6 extra">
      <a href="#" class="toggle-menu mdi mdi-menu"></a>
    </div>

    <div class="col-xs-6 extra text-right">
      <a href="/carrito">
        <i class="mdi mdi-cart"><sup>{{ cart.total_items }}</sup></i> Carrito
      </a>
    </div>
    <div class="clearfix"></div>
  </div>

  <ul class="menu-list">
    <li class="extra">
      {% if settings.display_search %}
        <form action="/buscar" method="get">
          <div class="search">
          <input type="text" placeholder="BUSCAR">
            <button type="submit" class="mdi mdi-magnify"></button>
          </div>
        </form>
      {% endif %}
    </li>
    {% if store.customer_accounts_enabled_or_optional %}
      {% if customer %}
        <li class="extra">
          <a href="/cuenta">
            <i class="mdi mdi-lock"></i> Cuenta
          </a>
        </li>
        {% else %}
        <li class="extra">
          <a href="/cuenta/login">
            <i class="mdi mdi-lock"></i> Ingresar
          </a>
        </li>
        <li class="extra">
          <a href="/cuenta/registro">
            <i class="mdi mdi-account"></i> Crear cuenta
          </a>
        </li>
        {% endif %}
    {% endif %}

    {% for link in menus.main %}
      {% if link.children | length >= 1 %}
        <li class="submenu">
          <a href="#">
            {{ link.name }}
          </a>
          <ul>
            {% for children in link.children %}
            <li>
              <a href="{{ children.url }}">
                {{ children.name }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li>
          <a href="{{ link.url }}">
            {{ link.name }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
