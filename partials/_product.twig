<div class="product-card">
  {% if not product.is_in_stock %}
  <div class="ribbon"><span class="danger">AGOTADO</span></div>
  {% endif %}
  <a class="product-card__thumb-link" href="/productos/{{ product.permalink }}">
    {% if product.image_url is defined %}
    <img class="img-responsive product-card__thumb-image" src="{{ product.image_url }}" alt="{{ product.name }}">
    {% else %}
    <img class="img-responsive product-card__thumb-image" src="{{ 'placeholder.svg' | asset_url }}" alt="{{ product.name }}">
    {% endif %}
  </a>
  <a class="product-card__details" href="/productos/{{ product.permalink }}">
    {{ product.name }}
    <br>
    {{ product.price | money('symbol', 'code') }}
  </a>
</div>
